page {
  width:100;
  height: 100vh;
  background-color: #f4f6f8;
}
/* //page小程序中最外层的容器 */
.container{
  /* 任何设备在小程序中都是750rpx 是以iphon6为标准的 rpx对应的是750像素*/
  position: fixed;
  width: 686rpx;
  height: 438rpx;
  background-color: green;
  margin-top: 32rpx;
  margin-left: 32rpx;
  top: 140rpx;
  box-shadow: 1px 1px 6px #f4f6f8;

}
.section {
  height: 108rpx;
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
}
.nav-me{
  height: 30rpx;
  width: 30rpx;
  left: 0;
  margin-top: 10rpx;
  background-color: #ffffff;
  transform:scale(.15);
  z-index:999;
}
.nav-all{
  right: 0rpx;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  z-index: 999;
  top: 0;
  background-color: #ffffff;
  transform: scale(.18);
  margin-right: 80rpx;
}
/* rpx是小程序中不用px,用rpx */
.nav{
  height: 108rpx;
  width: 550rpx;
  position: fixed;
  box-sizing:border-box;
  overflow:hidden;
  line-height: 108rpx;
  background: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 100rpx;
  right: 100rpx;
  z-index: 99;
  margin-bottom: 32px;
}
.nav-item{
  display: inline-block;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
}
/* 高亮 */
.nav-item.active{
  color: #fc975c;
}
